<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC 
"-//Apache Software Foundation//DTD Struts Configuration 1.3//EN" 
"http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">
<struts-config>

	<form-beans>
		<form-bean name="nullForm" type="com.philihp.boatswag.form.NullForm" />
	</form-beans>

	<global-forwards>
		<forward name="root" path="/" redirect="true" />
			<forward name="authenticate" path="/authenticate.do" redirect="true" />

		<!-- index.jsp needs this to be global, but nobody else should use it. -->
		<!-- instead, forward to "root" which keeps the URL uncluttered -->
		<forward name="board" path="/showBoard.do" redirect="false" />
	</global-forwards>

	<action-mappings>
		<action path="/authenticate" type="com.philihp.boatswag.action.Authenticate">
			<forward name="default" path="/authenticateGetMe.do" />
			<forward name="facebook"
				path="https://www.facebook.com/dialog/oauth?client_id=${facebook.id}&amp;scope=user_location,user_groups&amp;redirect_uri=${facebook.redirect}"
				redirect="true" />
		</action>
		<action path="/authenticateGetMe" type="com.philihp.boatswag.action.AuthenticateGetMe">
			<forward name="default" path="/authenticateGetLocation.do" />
		</action>
		<action path="/authenticateGetLocation" type="com.philihp.boatswag.action.AuthenticateGetLocation">
			<forward name="default" path="/authenticateGetGroups.do" />
		</action>
		<action path="/authenticateGetGroups" type="com.philihp.boatswag.action.AuthenticateGetGroups">
			<forward name="default" path="/authenticateSaveData.do" />
		</action>
		<action path="/authenticateSaveData" type="com.philihp.boatswag.action.AuthenticateSaveData">
		  <forward name="default" path="/" redirect="true" />
		</action>
		
		<action path="/authenticateLogout" type="com.philihp.boatswag.action.AuthenticateLogout">
			<forward name="default" path="/" redirect="true" />
		</action>
		
		<action path="/refreshConnections" type="com.philihp.boatswag.action.RefreshConnections">
		  <forward name="default" path="/" redirect="true" />
		</action>
		<action path="/refreshMyFriends" type="com.philihp.boatswag.action.RefreshMyFriends">
		  <forward name="default" path="/refreshConnections.do" />
		</action>

		<action path="/showBoard" name="nullForm" type="com.philihp.boatswag.action.ShowBoard">
			<forward name="login" path="/login.jsp" />
			<forward name="survivorNo" path="/survivorNo.jsp" />
			<forward name="survivorYes" path="/survivorYes.jsp" />
		</action>

	</action-mappings>

	<message-resources parameter="ApplicationResources" />

</struts-config>